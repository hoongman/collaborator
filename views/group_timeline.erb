<h2> You are in the group named: <span class="capital" style="color: green"><%= group.group_name %></span></h2>



<section class="row">
    <form method='POST'>
      <input id="post-message" type='text' style='width:460px' name='message' placeholder='go on, post something here' />
      <span id="post-button" class="btn btn-primary btn-block">Post</span>
    </form>

<h1>Your Posts</h1>
  <ul>
    <% posts.each do |post| %>
      <li>
        <h4><%= post.content %></h4>
        <p><%= post.created_at %></p>
        <p> <form method='POST' action='/groups/<%= group.url%>/delete_post'>
          <input type='hidden' name='post_id' value='<%=post._id%>'>
          <button id='delete-button' class="btn">Delete</button>
        </form></p>
      </li>
    <% end %>
  </ul>

<script>
  $('#post-button').bind('click', function() {
    $.post('/groups/<%= group.url %>', { 'message': $('#post-message').val() }, function(data) {
      var post = $.parseJSON(data);
      var html = "<li><h4>"+post.content+"</h4><p>"+post.created_at+"</p><p><form method='POST' action='/groups/<%= group.url%>/delete_post'><input type='hidden' name='post_id' value='"+post._id+"'><button class='btn'>Delete</button></form></p></li>"
      $('ul').prepend(html);
    })
  });
</script>