<h1>Profile Page:</h1>
<h2><%= user.username %></h2>

  <form method='POST' action='/profiles/<%=user.username%>'> 
    <label class="control-label" for="inputEmail">Username</label>
    <input type="text" name='username' placeholder='username' value=<%= user.username %> />

    <label class="control-label" for="inputEmail">Password</label>
    <input label="password" type='password' name='password' placeholder='password'value=<%= user.password %>/>
    
    <label class="control-label" for="inputPassword">First Name</label>
    <input type="text" placeholder="First Name" name='firstname' value=<%= user.firstname %> />

    <label class="control-label" for="inputPassword">Last Name</label>
    <input type="text" placeholder="Last Name" name='lastname' value=<%= user.lastname %> />

    <label class="control-label" for="inputEmail">Email</label>
    <input type="text" placeholder="Email" name='email' value=<%= user.email %> />

    <label class="control-label" for="inputDescription">Tell us about you!</label>
    <textarea style="height:100px; width:460px;" name='description' placeholder="Use this space to add something about you to your profile page"> <%= user.description %></textarea>  

    <button class="btn btn-primary btn-block">Update profile</button>
  </form>